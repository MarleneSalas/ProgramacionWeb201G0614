@model U3A1.Areas.Admin.Models.AdminPromocionViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post" action="~/Admin/Menu/AgregarPromocion">
    <h1>Agregar un descuento de promoción</h1>
    <input type="hidden" asp-for="Id" />
    <span>
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" asp-for="Nombre" readonly>
    </span>
    <span>
        <label for="precio">Precio real:</label>
        <input type="text" id="precio" asp-for="Precio" readonly>
    </span>
    <span>
        <label for="promocion">Precio promoción:</label>
        <input type="text" id="promocion" required asp-for="PrecioPromocion">
    </span>
    <span class="error">@Html.ValidationSummary(true)</span>

    <div class="botones">
        <input type="submit" value="Agregar" />
        <a href="~/Admin/Menu">
            <input type="button" value="Cancelar" />
        </a>
    </div>
</form>