@model U2A1.Models.ViewModels.EspecieViewModel
@{
	Layout = "Layout";
}

<h1>
	<img src="~/clases/@(Model.IdClase).png" />@Model.NombreClase
</h1>

<div class="listaEspecies2">
	@foreach (var item in Model.Especies)
	{
		<a href="~/Home/especie/@item.NombreEspecie.Replace(" ","-")">
			<img src="~/especies/@(item.IdEspecie).jpg" title="@item.NombreEspecie" />
		</a>
	}	
		
</div>

<script>

	var c = document.querySelector("main h1 img").cloneNode();
	document.querySelector("main h1").appendChild(c);
</script>

